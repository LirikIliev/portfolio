<main>
    <section class="crypto-market">
        <h1><span>Crypto</span> Trade</h1>
        {{#if cryptos}}
        <div class="offer-list">
            {{#each cryptos}}
            <div class="coin">
                <div class="coin-img">
                    <img src="{{image}}">
                </div>
                <div class="coin-info">
                    <h1>{{name}}</h1>
                    <p><span>Price: </span>${{price}}</p>
                    <p><span>Payment: </span>{{payment}}</p>
                </div>

                <a href="/crypto-details/{{_id}}" class="btn-details">Details</a>
            </div>
            {{/each}}
            {{else}}
            <h1>There are no crypto offers found</h1>
            {{/if}}
        </div>