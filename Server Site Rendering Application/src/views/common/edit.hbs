<main>
    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Announcement</h1>
            <form method="post">
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{body.name}}">
                <label>Image:</label>
                <input type="text" id="image" name="image" value="{{body.image}}">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{body.price}}">
                <label>Description:</label>
                <textarea name="description" id="description">{{body.description}}</textarea>
                <label>Payment method:</label>
                <select id="payment" name="payment" value="{{body.payment}}">
                    <option value="crypto-wallet">Crypto Wallet</option>
                    <option value="credit-card">Credit Card</option>
                    <option value="debit-card">Debit Card</option>
                    <option value="paypal" selected>PayPal</option>
                </select>
                <input type="submit" id="btn" value="EDIT"></input>
            </form>
        </div>
    </section>
</main>